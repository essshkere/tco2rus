<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Номер заказа -->
        <TextView
            android:id="@+id/orderNumberTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Заказ #12345"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <!-- Маршрут -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fromAddressTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Москва"
                android:textColor="@color/gray_dark"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/ic_arrow_right"/>

            <TextView
                android:id="@+id/toAddressTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Санкт-Петербург"
                android:textColor="@color/gray_dark"/>
        </LinearLayout>

        <!-- Статус и дата -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_status_pending"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="В обработке"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="end"
                android:text="12.05.2023"
                android:textColor="@color/gray_dark"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
